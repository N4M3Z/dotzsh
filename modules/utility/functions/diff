#
# Highlights diff output.
#
# Authors:
#   Sorin Ionescu <sorin.ionescu@gmail.com>
#

function diff {
  if zstyle -t ':dotzsh:module:utility:diff' color; then
    if (( $+commands[colordiff] )); then
      command colordiff "$@"
    else
      command diff "$@"
    fi
  else
    command diff "$@"
  fi
}

diff "$@"
